<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.error.ErrorActivity">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_application_gradual" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="emmm......粗错了😳"
            android:textColor="@android:color/darker_gray"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="很抱歉给您带来不便"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/btn_error_more_info"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_diffusion_2"
            android:text="查看详情"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_error_restart"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_diffusion_2"
            android:text="重新启动"
            android:textSize="16sp" />

    </LinearLayout>
</FrameLayout>