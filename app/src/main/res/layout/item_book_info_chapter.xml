<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="chapterItemModel"
            type="com.imamouse.combook.ui.book.chapter.BookInfoChapterItemModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:hint="@string/chapter_name"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:onClick="@{chapterItemModel.openCatalog}"
            android:text="@{chapterItemModel.chapterName}"
            android:textSize="18sp" />
    </RelativeLayout>

</layout>